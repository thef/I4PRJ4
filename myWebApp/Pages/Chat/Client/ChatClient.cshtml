@page
@model myWebApp.Pages.Chat.Client.ChatClient
@{
    ViewData["Title"] = "Chat";
}

<h3>@ViewData["Title"]</h3>

@Html.PartialAsync("_StatusMessage", Model.StatusMessage).Result

<div class="row">
    <div class="col-md-6">
        <section></section>
            <form method="post">
                <input  type="hidden"/>
                <h5>------</h5>
                <hr/>
                <div asp-validation-summary="All" class="text-danger"></div>

                <div class="form-group">
                    ClientStatus: @Model.ClientStatus
                    <br>
                    
                    <label asp-for="Input.Log"></label>
                    <br/>
                    <table>
                        <thead>
                            <th>Id</th>
                            <th>User</th>
                            <th>Message</th>
                        </thead>

                            @foreach (var msg in @Model.Messages)
                            {
                                <tbody>
                                <td>@msg.Id</td>
                                <td>@msg.UserName</td>
                                <td>@msg.Msg</td>
                                </tbody>
                            }
                    </table>
                </div>

                <div class="form-group">
                    <label asp-for="Input.Message"></label>
                    <input asp-for="Input.Message" class="form-control" />
                    <span asp-validation-for="Input.Message" class="text-danger"></span>
                </div>

                <hr/>
                <button type="submit" class="btn btn-primary">Send</button>
            </form>
        </section>
    </div>
</div>

<div class="row">
    <div class="col-md-6">
        <form method="post">
            <h5>Insert IPEndpoint for client</h5>
            <hr />
            <div asp-validation-summary="All" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="ClientReceiverEndPoint.Address"></label>
                <input asp-for="ClientReceiverEndPoint.Address" class="form-control" />
                <span asp-validation-for="ClientReceiverEndPoint.Address" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="ClientSenderEndPoint.Address"></label>
                <input asp-for="ClientSenderEndPoint.Address" class="form-control" />
                <span asp-validation-for="ClientSenderEndPoint.Address" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="ServerEndPoint.Port">Server Port</label>
                <input asp-for="ServerEndPoint.Port" class="form-control" />
                <span asp-validation-for="ServerEndPoint.Port" class="text-danger"></span>
            </div>

            <hr />
            <button type="submit" class="btn btn-primary" asp-page-handler="SetClientEndpoint">Set IPEndpoint for client</button>
        </form>
    </div>
</div>

<br/>
<form method="post">
    <div>
        <input type="submit" value="Start Client" asp-page-handler="ClientStart" />
    </div>
</form>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}