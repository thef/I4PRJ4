@page
@model myWebApp.Pages.Chat.ServiceChat
@{
    ViewData["Title"] = "Chat";
}

<h3>@ViewData["Title"]</h3>

@Html.PartialAsync("_StatusMessage", Model.StatusMessage).Result

<div class="row">
    <div class="col-md-6">
        <section></section>
            <form method="post">
                <input  type="hidden"/>
                <h5>Please enter the following changes about the product you wish to edit.</h5>
                <hr/>
                <div asp-validation-summary="All" class="text-danger"></div>

                <div class="form-group">   
                    <label asp-for="Log"></label>
                </div>

                <div class="form-group">
                    <label asp-for="Input.Message"></label>
                    <input asp-for="Input.Message" class="form-control" />
                    <span asp-validation-for="Input.Message" class="text-danger"></span>
                </div>

                <hr/>
                <button type="submit" class="btn btn-primary">Send</button>
            </form>
        </section>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
