<div class="row">
    <div class="col-md-6">
        <form method="post">
            <h5>Input your credit information to proceed.</h5>
            <hr />
            <div asp-validation-summary="All" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Orders.FirstName"></label>
                <input asp-for="Orders.FirstName" class="form-control" />
                <span asp-validation-for="Orders.FirstName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Orders.LastName"></label>
                <input asp-for="Orders.LastName" class="form-control" />
                <span asp-validation-for="Orders.LastName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Orders.PostalCode"></label>
                <input asp-for="Orders.PostalCode" class="form-control" />
                <span asp-validation-for="Orders.PostalCode" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Orders.Phone"></label>
                <input asp-for="Orders.Phone" class="form-control" />
                <span asp-validation-for="Orders.Phone" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Orders.Address"></label>
                <input asp-for="Orders.Address" class="form-control" />
                <span asp-validation-for="Orders.Address" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Orders.Country"></label>
                <input asp-for="Orders.Country" class="form-control" />
                <span asp-validation-for="Orders.Country" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Orders.Email"></label>
                <input asp-for="Orders.Email" class="form-control" />
                <span asp-validation-for="Orders.Email" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Orders.cardNumber"></label>
                <input asp-for="Orders.cardNumber" class="form-control" />
                <span asp-validation-for="Orders.cardNumber" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Orders.experessionDate"></label>
                <input asp-for="Orders.experessionDate" class="form-control" />
                <span asp-validation-for="Orders.experessionDate" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Orders.cvc"></label>
                <input asp-for="Orders.cvc" class="form-control" />
                <span asp-validation-for="Orders.cvc" class="text-danger"></span>
            </div>
            <hr />
            <button type="submit" class="btn btn-primary" asp-page="/Cart/BuySecondPage">Next</button>
        </form>
    </div>
</div>